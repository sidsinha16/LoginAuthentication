extends layout

block content   
        form(method='post' action='/users/login')
         div.form-group
            label(for='username') Username:
            input#name.form-control(type='text' name='username' placeholder='Enter your unique username')
         div.form-group
            label(for='password') Password:
            input#name.form-control(type='password' name='password' placeholder='Enter your password')
         button.btn.btn-warning(type='submit') Login